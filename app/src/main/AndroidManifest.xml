<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConnectifyProject"
        tools:targetApi="31">

        <!-- Login = entry point -->
        <activity
            android:name=".auth_login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pantallas internas -->
        <activity android:name=".admin_dashboard" android:exported="false" />
        <activity android:name=".admin_tours" android:exported="false" />
        <activity android:name=".admin_chat" android:exported="false" />
        <activity android:name=".admin_pagos" android:exported="false" />
        <activity android:name=".admin_perfil" android:exported="false" />
        
        <!-- Pantallas por rol -->
        <activity android:name=".sa_users_view" android:exported="false" />
        <activity android:name=".cliente_inicio" android:exported="false" />
        <activity android:name=".guia_tours_ofertas" android:exported="false" />
        
        <!-- Chat Activities -->
        <activity android:name=".cliente_chat_list" android:exported="false" />
        <activity android:name=".cliente_chat_conversation" android:exported="false" />
        
        <!-- Cliente Navbar Activities -->
        <activity android:name=".cliente_perfil" android:exported="false" />
        <activity android:name=".cliente_tours" android:exported="false" />
        <activity android:name=".cliente_reservas" android:exported="false" />
        <activity android:name=".cliente_notificaciones" android:exported="false" />
        
        <!-- Cliente Profile Child Activities -->
        <activity android:name=".cliente_metodos_pago" android:exported="false" />
        <activity android:name=".cliente_nuevo_metodo_pago" android:exported="false" />
        <activity android:name=".cliente_editar_perfil" android:exported="false" />
        <activity android:name=".cliente_cambiar_contrasenia" android:exported="false" />
        <activity android:name=".cliente_permisos" android:exported="false" />
        
        <!-- Cliente Tours Activities -->
        <activity android:name=".cliente_tour_detalle" android:exported="false" />
        <activity android:name=".cliente_tour_filtros" android:exported="false" />
    </application>
</manifest>