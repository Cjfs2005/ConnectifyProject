<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/brand_green_light" />
        </shape>
    </item>
    
    <!-- Patrón de líneas para simular calles -->
    <item android:top="30dp" android:left="20dp" android:right="80dp">
        <shape android:shape="rectangle">
            <solid android:color="#D0E7D0" />
            <size android:height="2dp" />
        </shape>
    </item>
    
    <item android:top="60dp" android:left="40dp" android:right="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#C0D7C0" />
            <size android:height="2dp" />
        </shape>
    </item>
    
    <item android:top="90dp" android:left="10dp" android:right="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#D0E7D0" />
            <size android:height="2dp" />
        </shape>
    </item>
    
    <!-- Líneas verticales -->
    <item android:top="20dp" android:bottom="20dp" android:left="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#C0D7C0" />
            <size android:width="2dp" />
        </shape>
    </item>
    
    <item android:top="40dp" android:bottom="40dp" android:left="120dp">
        <shape android:shape="rectangle">
            <solid android:color="#D0E7D0" />
            <size android:width="2dp" />
        </shape>
    </item>
</layer-list>
