<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/cliente_inicio_title"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:titleTextColor="?attr/colorOnPrimary"
        app:titleCentered="false">

        <ImageButton
            android:id="@+id/btn_notifications"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Notificaciones"
            android:src="@drawable/ic_bell"
            app:tint="?attr/colorOnPrimary"
            style="@style/Widget.Material3.Button.IconButton" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Tour Activo Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tour_activo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.Material3.CardView.Outlined">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Tour Activo Title -->
                    <TextView
                        android:id="@+id/tv_tour_activo_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cliente_tour_activo"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Tour Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_tour_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cliente_tour_lima"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_tour_activo_title"
                        app:shapeAppearanceOverlay="@style/RoundedImageView" />

                    <!-- Tour Details Container -->
                    <LinearLayout
                        android:id="@+id/layout_tour_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@id/iv_tour_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_tour_image"
                        app:layout_constraintTop_toTopOf="@id/iv_tour_image">

                        <TextView
                            android:id="@+id/tv_tour_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tour hist贸rico por Lima"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_tour_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Lima Tours"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/tv_tour_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Duraci贸n: 5 hrs 30 min. Fecha: 23/09/2025."
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>



                    <!-- Progress Steps Container -->
                    <LinearLayout
                        android:id="@+id/layout_progress_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_tour_image">

                        <!-- Progress Labels -->
                        <LinearLayout
                            android:id="@+id/layout_progress_labels"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_inicio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Inicio"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/cliente_progress_active" />

                            <TextView
                                android:id="@+id/tv_en_curso"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="En curso"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/cliente_progress_active" />

                            <TextView
                                android:id="@+id/tv_fin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="Fin"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/cliente_progress_inactive" />

                        </LinearLayout>

                        <!-- Custom Progress Bar with Circles -->
                        <RelativeLayout
                            android:id="@+id/layout_custom_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:paddingHorizontal="4dp">

                            <!-- Progress Line Background -->
                            <View
                                android:id="@+id/progress_line_bg"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/cliente_progress_line_bg" />

                            <!-- Progress Line Active -->
                            <View
                                android:id="@+id/progress_line_active"
                                android:layout_width="0dp"
                                android:layout_height="4dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/cliente_progress_line_active"
                                android:visibility="gone" />

                            <!-- Circle 1 - Inicio (Completed) -->
                            <View
                                android:id="@+id/circle_inicio"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/cliente_progress_circle_active" />

                            <!-- Circle 2 - En curso (Inactive) -->
                            <View
                                android:id="@+id/circle_en_curso"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/cliente_progress_circle_inactive" />

                            <!-- Circle 3 - Fin (Inactive) -->
                            <View
                                android:id="@+id/circle_fin"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/cliente_progress_circle_inactive" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- QR Code Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_qr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_tour_activo"
                style="@style/Widget.Material3.CardView.Outlined">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- QR Code Image (ImageView simple como en cliente_show_qr_view.xml) -->
                    <ImageView
                        android:id="@+id/iv_qr_code"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter"
                        android:contentDescription="C贸digo QR para check-in"
                        android:background="@android:color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- QR Instruction Text -->
                    <TextView
                        android:id="@+id/tv_qr_instruction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="@string/cliente_qr_instruction"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_qr_code" />
                    
                    <!-- Current Itinerary Point Text (only visible during en_curso) -->
                    <TextView
                        android:id="@+id/tv_punto_actual"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@color/cliente_progress_active"
                        android:padding="12dp"
                        android:gravity="center"
                        android:text=" Ubicaci贸n actual: Plaza Mayor (3/5 puntos)"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_qr_instruction" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Pie Chart Statistics Card (shown when no active tour) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_statistics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_qr"
                style="@style/Widget.Material3.CardView.Outlined">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Statistics Title -->
                    <TextView
                        android:id="@+id/tv_statistics_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=" Mis estad铆sticas de tours"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Pie Chart -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_statistics_title" />

                    <!-- No Data Message -->
                    <TextView
                        android:id="@+id/tv_no_statistics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="A煤n no tienes tours registrados.\n隆Explora nuestros destinos!"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/on_surface_variant"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_statistics_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tours Reci茅n Agregados Section -->
            <LinearLayout
                android:id="@+id/layout_tours_recientes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_statistics">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Tours reci茅n agregados"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Tours Recientes RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tours_recientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <!-- Mensaje cuando no hay tours -->
                <TextView
                    android:id="@+id/tv_no_tours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:text=" No hay tours disponibles en este momento\n\nVuelve pronto para ver nuevas experiencias"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:menu="@menu/cliente_bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/cliente_bottom_nav_tint"
        app:itemTextColor="@color/cliente_bottom_nav_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Material3.BottomNavigationView" />

</androidx.constraintlayout.widget.ConstraintLayout>