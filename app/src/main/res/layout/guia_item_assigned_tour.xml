<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tour_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_bus_guia"
                android:scaleType="centerInside"
                android:layout_marginEnd="12dp"
                app:tint="#FF5722" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tour_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tour_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tour_empresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tour_initio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tour_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tour_clients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/details_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_eye"
                android:padding="4dp"
                android:contentDescription="Ver detalles"
                app:tint="#2196F3" />

            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_map"
                android:padding="4dp"
                android:contentDescription="Ver mapa"
                app:tint="#4CAF50" />

            <ImageView
                android:id="@+id/check_in_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_in"
                android:padding="4dp"
                android:contentDescription="Check-in"
                app:tint="#FFEB3B" />

            <ImageView
                android:id="@+id/check_out_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_out"
                android:padding="4dp"
                android:contentDescription="Check-out"
                app:tint="#F44336" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>