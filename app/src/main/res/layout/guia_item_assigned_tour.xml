<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con empresa y estado (similar a ofertas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/empresaText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Empresa Tours"
                android:textColor="#6200EA"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="#E8EAF6"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tour_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN CURSO"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="#E8F5E8"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Título del tour -->
        <TextView
            android:id="@+id/tour_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City Tour Lima Centro Histórico"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Información básica en grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FAFAFA"
            android:paddingVertical="8dp"
            android:layout_marginBottom="8dp">

            <!-- Duración -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duración"
                    android:textSize="10sp"
                    android:textColor="#9E9E9E"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tour_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 horas"
                    android:textSize="13sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0" />

            <!-- Participantes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Participantes"
                    android:textSize="10sp"
                    android:textColor="#9E9E9E"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tour_clients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="13sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Fecha y hora del tour -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:background="#FFF3E0"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15/11/2025"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#E65100" />

            <TextView
                android:id="@+id/tour_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 - 13:00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#E65100" />

        </LinearLayout>

        <!-- Pago al guía -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E8F5E9"
            android:padding="10dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tu pago:"
                android:textSize="13sp"
                android:textColor="#616161"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pagoGuiaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 85"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2E7D32" />

        </LinearLayout>

        <!-- Acciones para tours en curso -->
        <LinearLayout
            android:id="@+id/actions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone">

            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_map"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Ver mapa" />

            <ImageView
                android:id="@+id/check_in_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_in"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Check-in" />

            <ImageView
                android:id="@+id/check_out_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_out"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Check-out" />

            <ImageView
                android:id="@+id/details_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_details"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:contentDescription="Ver detalles" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>