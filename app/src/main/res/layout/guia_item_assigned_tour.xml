<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con empresa y estado (similar a ofertas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/empresaText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Empresa Tours"
                android:textColor="#6200EA"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="#E8EAF6"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tour_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN CURSO"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="#E8F5E8"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- TÃ­tulo del tour -->
        <TextView
            android:id="@+id/tour_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City Tour Lima Centro HistÃ³rico"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- InformaciÃ³n bÃ¡sica en grid (igual que ofertas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- DuraciÃ³n -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="â°"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tour_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 horas"
                    android:textSize="12sp"
                    android:textColor="#757575" />

            </LinearLayout>

            <!-- Participantes (en lugar de idiomas) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="ðŸ‘¥"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tour_clients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 personas"
                    android:textSize="12sp"
                    android:textColor="#757575" />

            </LinearLayout>

        </LinearLayout>

        <!-- Fecha y hora del tour (igual que ofertas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:background="#F3E5F5"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="ðŸ“…"
                android:textSize="14sp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15/11/2025"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF9800" />

            <TextView
                android:id="@+id/tour_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 - 13:00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF9800" />

        </LinearLayout>

        <!-- Pago al guÃ­a (igual que ofertas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E8F5E8"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="ðŸ’°"
                android:textSize="16sp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tu pago:"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/pagoGuiaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 85"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- Acciones para tours en curso -->
        <LinearLayout
            android:id="@+id/actions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone">

            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_map"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Ver mapa" />

            <ImageView
                android:id="@+id/check_in_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_in"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Check-in" />

            <ImageView
                android:id="@+id/check_out_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_out"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Check-out" />

            <ImageView
                android:id="@+id/details_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_details"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:contentDescription="Ver detalles" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>