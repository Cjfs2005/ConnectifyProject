<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con empresa y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tour_empresa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trujillo Tours"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tour_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="EN CURSO"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- TÃ­tulo del tour -->
        <TextView
            android:id="@+id/tour_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City Tour Lima Centro HistÃ³rico"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- InformaciÃ³n bÃ¡sica en grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Inicio"
                    android:textSize="11sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tour_initio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/11/2025 - 09:00"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸ DuraciÃ³n"
                    android:textSize="11sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tour_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 horas"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Participantes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥ Participantes: "
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tour_clients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 personas"
                android:textSize="12sp"
                android:textColor="#333333"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Actions at bottom -->
        <LinearLayout
            android:id="@+id/actions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_map"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Ver mapa" />

            <ImageView
                android:id="@+id/check_in_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_in"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Check-in" />

            <ImageView
                android:id="@+id/check_out_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_out"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Check-out" />

            <ImageView
                android:id="@+id/details_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_details"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:contentDescription="Ver detalles" />
        </LinearLayout>

        <!-- Icon at bottom right -->
        <ImageView
            android:id="@+id/tour_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_bus_guia"
            android:scaleType="centerInside"
            app:tint="#FF5722" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>