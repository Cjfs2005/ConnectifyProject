<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kpiCard"
    android:layout_width="0dp"
    android:layout_height="120dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/brand_lilac"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:backgroundTint="@color/kpi_icon_bg"
            android:background="@drawable/bg_circle"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivKpiIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_nav_dashboard" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvKpiValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/kpi_text" />

        <TextView
            android:id="@+id/tvKpiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kpi_tours_en_curso"
            android:textColor="@color/kpi_subtext" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>