<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Message from Admin (Right side) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_message_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/brand_purple"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_message_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hola, claro que sí. ¿Para cuántas personas?"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@android:color/white"
                tools:text="Hola, claro que sí. ¿Para cuántas personas?" />

            <TextView
                android:id="@+id/tv_time_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:text="14:30"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@android:color/white"
                android:alpha="0.7"
                tools:text="14:30" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Message from Client (Left side) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_message_client"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_message_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Hola! Me interesa el tour a Machu Picchu"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/text_primary"
                tools:text="¡Hola! Me interesa el tour a Machu Picchu" />

            <TextView
                android:id="@+id/tv_time_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="14:32"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@color/text_secondary"
                android:alpha="0.7"
                tools:text="14:32" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
