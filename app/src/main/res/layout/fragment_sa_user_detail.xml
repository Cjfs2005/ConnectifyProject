<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Atr谩s"
                android:scaleType="center"
                android:src="@drawable/ic_arrow_back_24" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="PERFIL DE USUARIO"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Avatar -->
        <ImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_24"
            android:background="@drawable/bg_avatar_round" />

        <!-- Contenedor para Admin (mensaje temporal) -->
        <LinearLayout
            android:id="@+id/layoutAdminMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="48sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vista de administrador"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esta funcionalidad se implementar谩 pronto"
                android:textSize="14sp"
                android:textColor="@color/text_color_secondary"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Contenedor para Gu铆a/Cliente (campos completos) -->
        <LinearLayout
            android:id="@+id/layoutUserFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fecha de registro -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRegDate"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de registro">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hora de registro -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRegTime"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Hora de registro">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nombre completo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilFullName"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Nombre completo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tipo de documento -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDocType"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Tipo de documento">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDocType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- N煤mero de documento -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDocNumber"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="N煤mero de documento">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDocNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fecha de nacimiento -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilBirth"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Fecha de nacimiento">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Correo electr贸nico">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tel茅fono -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPhone"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Tel茅fono">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Direcci贸n -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAddress"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Direcci贸n">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Idiomas (solo para gu铆as) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLanguages"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Idiomas"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLanguages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campos de empresa (solo para administradores) -->
            <LinearLayout
                android:id="@+id/layoutAdminFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informaci贸n de la Empresa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <!-- Nombre de empresa -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCompanyName"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Nombre de la empresa">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:longClickable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Descripci贸n de empresa -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCompanyDescription"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Descripci贸n">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCompanyDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:gravity="top"
                        android:focusable="false"
                        android:clickable="false"
                        android:longClickable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Ubicaci贸n de empresa -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCompanyLocation"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Ubicaci贸n">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCompanyLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:longClickable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Correo de empresa -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCompanyEmail"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Correo de contacto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCompanyEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:longClickable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tel茅fono de empresa -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCompanyPhone"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Tel茅fono de contacto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCompanyPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:longClickable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Calificaci贸n promedio -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilRating"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Calificaci贸n promedio">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:longClickable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fotos promocionales -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fotos Promocionales"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCompanyPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Botones de acci贸n -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Cambiar estado" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
