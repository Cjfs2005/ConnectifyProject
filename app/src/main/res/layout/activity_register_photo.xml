<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Header con progreso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_purple_dark"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4 de 4"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto de perfil"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agrega una foto para que otros usuarios puedan reconocerte fácilmente"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="48dp"
                android:gravity="center" />

            <!-- Contenedor de foto de perfil -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="48dp">

                <!-- Círculo de foto -->
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="75dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivProfilePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_placeholder"
                        android:background="@color/brand_lilac" />

                </androidx.cardview.widget.CardView>

                <!-- Botón de cámara flotante -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-40dp"
                    android:layout_marginEnd="-40dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_camera"
                    app:backgroundTint="@color/brand_purple_dark"
                    app:tint="@color/white"
                    app:fabSize="normal" />

            </LinearLayout>

            <!-- Opciones de selección -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCamera"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cámara"
                    android:textColor="@color/brand_purple_dark"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/brand_purple_dark"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_camera"
                    app:iconTint="@color/brand_purple_dark"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGallery"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Galería"
                    android:textColor="@color/brand_purple_dark"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/brand_purple_dark"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_image"
                    app:iconTint="@color/brand_purple_dark"
                    app:iconGravity="textStart" />

            </LinearLayout>

            <!-- Mensaje de error -->
            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Error al seleccionar la imagen"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>

    <!-- Botones del footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOmitir"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:text="Omitir por ahora"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/transparent"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"
            app:elevation="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Finalizar registro"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/brand_purple_dark"
            app:cornerRadius="12dp"
            app:elevation="0dp" />

    </LinearLayout>

</LinearLayout>