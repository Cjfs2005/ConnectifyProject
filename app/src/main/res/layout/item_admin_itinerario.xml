<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Indicador visual -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="12dp">

        <!-- Punto circular -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_circle"
            android:backgroundTint="@color/primary" />

        <!-- Línea conectora -->
        <View
            android:id="@+id/lineaConectora"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_200"
            android:visibility="visible" />

    </LinearLayout>

    <!-- Contenido del lugar -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plaza Mayor"
            android:textColor="@color/on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio del tour en el corazón de Lima colonial"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />

        <TextView
            android:id="@+id/tvDuracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duración: 1 hora"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Indicador de ubicación -->
    <ImageView
        android:id="@+id/ivLocationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_location_on_24"
        android:tint="@color/primary"
        android:alpha="0.7" />

</LinearLayout>