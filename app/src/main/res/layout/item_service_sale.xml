<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginBottom="8dp">

    <!-- Fondo con esquinas redondeadas -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/border_light"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Nombre del servicio con mÃ¡s espacio -->
            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Paquetes de comida"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Barra de progreso mejorada -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="80dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="12dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/bg_progress_service" />

            <!-- Monto con mejor contraste -->
            <TextView
                android:id="@+id/tvServiceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400"
                android:textColor="@color/brand_purple_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:minWidth="48dp"
                android:gravity="end" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>