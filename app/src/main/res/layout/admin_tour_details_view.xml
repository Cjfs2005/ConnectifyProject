<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <!-- AppBar con Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_purple_dark"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/brand_purple_dark"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Detalles del Tour"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen hero del tour -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivTourHero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="Imagen del tour" />

                    <!-- Badge de estado -->
                    <TextView
                        android:id="@+id/tvEstadoBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_margin="12dp"
                        android:background="@drawable/bg_badge_rounded"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="Publicado"
                        android:textColor="@color/surface"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Información básica del tour -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTourNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tour Lima Centro"
                    android:textColor="@color/on_surface"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTourDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción del tour"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Botón Asignar Guía (solo visible para tours en borrador) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAsignarGuia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Asignar Guía"
                    android:textColor="@color/surface"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button"
                    app:backgroundTint="@color/primary"
                    app:icon="@drawable/ic_person_add"
                    app:iconGravity="textStart" />

            </LinearLayout>

            <!-- Tabs para diferentes secciones -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:tabMode="scrollable"
                app:tabTextColor="@color/text_secondary"
                app:tabSelectedTextColor="@color/primary"
                app:tabIndicatorColor="@color/primary"
                app:tabRippleColor="@color/primary_container" />

            <!-- Contenido de las diferentes secciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">

                <!-- Sección Info -->
                <LinearLayout
                    android:id="@+id/layoutInfoSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Información de precio -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Información de Precio"
                                android:textColor="@color/on_surface"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Costo por persona:"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvCostoPorPersona"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$499"
                                    android:textColor="@color/on_surface"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Servicios incluidos:"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvServicios"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Guía, equipamiento"
                                    android:textColor="@color/on_surface"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Información de fechas -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Duración del Tour"
                                android:textColor="@color/on_surface"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Fecha de inicio:"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvFechaInicio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15 de julio, 2024"
                                    android:textColor="@color/on_surface"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Fecha de fin:"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvFechaFin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20 de julio, 2024"
                                    android:textColor="@color/on_surface"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Sección Itinerario -->
                <LinearLayout
                    android:id="@+id/layoutItinerarioSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Lista de lugares del itinerario -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Itinerario del Tour"
                                android:textColor="@color/on_surface"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <!-- RecyclerView para lugares del itinerario -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewItinerario"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Sección Guía -->
                <LinearLayout
                    android:id="@+id/layoutGuiaSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Información del Guía"
                                android:textColor="@color/on_surface"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <!-- Contenido cuando hay guía asignada -->
                            <LinearLayout
                                android:id="@+id/layoutGuiaAsignada"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:visibility="visible">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/ivGuiaAvatar"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_marginEnd="16dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_avatar_male_1"
                                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvGuiaNombre"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Carlos Mendoza"
                                        android:textColor="@color/on_surface"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvGuiaExperiencia"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="5 años de experiencia"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/tvGuiaIdiomas"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Español, Inglés"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/tvGuiaTelefono"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="📞 +51 987 654 321"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Contenido cuando no hay guía asignada -->
                            <LinearLayout
                                android:id="@+id/layoutGuiaNoAsignada"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="24dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Este tour necesita un guía asignado"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="16sp"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="16dp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnSeleccionarGuia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Buscar guía"
                                    android:textColor="@android:color/white"
                                    app:backgroundTint="@color/brand_purple_dark"
                                    app:cornerRadius="8dp"
                                    app:icon="@drawable/ic_person_add"
                                    app:iconTint="@android:color/white" />

                            </LinearLayout>

                            <!-- Timeline cuando está en espera de confirmación -->
                            <LinearLayout
                                android:id="@+id/layoutTimelineGuia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:visibility="gone">

                                <!-- Item Timeline 1: Propuesta enviada -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="16dp">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_send"
                                        android:layout_marginEnd="12dp"
                                        android:layout_marginTop="4dp"
                                        android:tint="@color/brand_purple_dark" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Propuesta enviada al guía"
                                            android:textColor="@color/text_primary"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvTimelinePropuestaEnviada"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="10:00 AM"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="14sp"
                                            android:layout_marginTop="2dp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Línea conectora -->
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="24dp"
                                    android:background="@color/text_secondary"
                                    android:layout_marginStart="11dp"
                                    android:layout_marginBottom="16dp" />

                                <!-- Item Timeline 2: Guía visualizó -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_check_circle"
                                        android:layout_marginEnd="12dp"
                                        android:layout_marginTop="4dp"
                                        android:tint="@color/text_secondary" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="El guía ha visualizado la propuesta"
                                            android:textColor="@color/text_primary"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/tvTimelineGuiaVisualizo"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="10:30 AM"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="14sp"
                                            android:layout_marginTop="2dp" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Sección Servicios -->
                <LinearLayout
                    android:id="@+id/layoutServiciosSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Servicios Incluidos"
                                android:textColor="@color/on_surface"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <!-- RecyclerView para servicios -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewServicios"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Sección Mapa (visible solo en Itinerario) -->
                <LinearLayout
                    android:id="@+id/layoutMapaSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Indicador "En curso" (solo visible si el tour está en curso) -->
                    <LinearLayout
                        android:id="@+id/layoutEstadoEnCurso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_success_rounded"
                        android:gravity="center"
                        android:padding="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🟢 En curso"
                            android:textColor="@color/success_700"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Información de ubicación con mapa -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Recorrido del Tour"
                                android:textColor="@color/on_surface"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <!-- Mapa -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:layout_marginBottom="8dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp">

                                <fragment
                                    android:id="@+id/mapFragmentTour"
                                    android:name="com.google.android.gms.maps.SupportMapFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tvTourLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Centro Histórico de Lima, Perú"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Espaciado para el bottom navigation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <FrameLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
