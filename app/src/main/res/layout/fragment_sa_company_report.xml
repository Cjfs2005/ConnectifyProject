<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_purple_dark">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Filtro: Mes -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mes"
                app:boxBackgroundColor="@android:color/white">

                <AutoCompleteTextView
                    android:id="@+id/autoMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Total (mes) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total (mes)"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>

                    <TextView
                        android:id="@+id/tvTotalMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reservas por día de semana -->
            <TextView
                android:id="@+id/tvSectionDow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Reservas por día de semana (mes)"
                android:textStyle="bold"/>

            <!-- 7 barras -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Lunes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Lun" />
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/barMon"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        app:trackColor="@color/gray_300"/>
                    <TextView
                        android:id="@+id/tvMon"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>

                <!-- Martes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Mar" />
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/barTue"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        app:trackColor="@color/gray_300"/>
                    <TextView
                        android:id="@+id/tvTue"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>

                <!-- Miércoles -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Mié" />
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/barWed"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        app:trackColor="@color/gray_300"/>
                    <TextView
                        android:id="@+id/tvWed"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>

                <!-- Jueves -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Jue" />
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/barThu"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        app:trackColor="@color/gray_300"/>
                    <TextView
                        android:id="@+id/tvThu"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>

                <!-- Viernes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Vie" />
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/barFri"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        app:trackColor="@color/gray_300"/>
                    <TextView
                        android:id="@+id/tvFri"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>

                <!-- Sábado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Sáb" />
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/barSat"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        app:trackColor="@color/gray_300"/>
                    <TextView
                        android:id="@+id/tvSat"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>

                <!-- Domingo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Dom" />
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/barSun"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        app:trackColor="@color/gray_300"/>
                    <TextView
                        android:id="@+id/tvSun"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Pie de estados -->
            <TextView
                android:id="@+id/tvSectionPie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Estado de reservas"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.example.connectifyproject.views.superadmin.reports.SimplePieView
                    android:id="@+id/pie"
                    android:layout_width="180dp"
                    android:layout_height="180dp" />

                <!-- Leyenda con puntos de color -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <!-- Finalizadas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/legend_dot"
                            android:backgroundTint="@color/legend_finished"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Finalizadas"/>
                        <TextView
                            android:id="@+id/legendFinished"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Activas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/legend_dot"
                            android:backgroundTint="@color/legend_active"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Activas"/>
                        <TextView
                            android:id="@+id/legendActive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Canceladas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/legend_dot"
                            android:backgroundTint="@color/legend_cancelled"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Canceladas"/>
                        <TextView
                            android:id="@+id/legendCancelled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Top-3 tours -->
            <TextView
                android:id="@+id/tvSectionTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Top 3 tours más reservados"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">
                    <TextView
                        android:id="@+id/tvTop1Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tour 1"/>
                    <TextView
                        android:id="@+id/tvTop1Val"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/barTop1"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    app:trackColor="@color/gray_300"/>

                <!-- Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/tvTop2Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tour 2"/>
                    <TextView
                        android:id="@+id/tvTop2Val"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/barTop2"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    app:trackColor="@color/gray_300"/>

                <!-- Item 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/tvTop3Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tour 3"/>
                    <TextView
                        android:id="@+id/tvTop3Val"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"/>
                </LinearLayout>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/barTop3"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    app:trackColor="@color/gray_300"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
